<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="10dp"
android:layout_marginTop="5dp"
android:layout_marginRight="10dp"
android:layout_marginBottom="5dp"
app:cardUseCompatPadding="true">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CrearEquipoActivity">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a_2"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="325dp"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a_8"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="225dp"/>

        <ImageView
            android:id="@+id/img3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/truemas"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="125dp"/>

        <ImageView
            android:id="@+id/img4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a_9"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="325dp"/>

        <ImageView
            android:id="@+id/img5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a_3"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="225dp"/>

        <ImageView
            android:id="@+id/img6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a_6"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="125dp"/>

        <TextView
            android:id="@+id/nameTeam"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Nombre del Equipo"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>